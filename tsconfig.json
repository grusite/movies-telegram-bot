{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./",
  },
  "exclude": [ "node_modules", "dist", "**/types/**" ],
  "include": [
    "src/**/*.ts",
  ]
}