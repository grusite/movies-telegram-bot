{
  "name": "telegram-bot",
  "private": true,
  "version": "3.0.0",
  "description": "Webhooks enpoints that uses a Telegram Bot that adds relevant media information (such as the IMDB score, transcoding, etc) into our Media Center Telegram chat groups",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run gen-db-types && node --import tsx --env-file=.env --watch src/index.ts",
    "start": "node --env-file=.env dist/index.js",
    "start-ci": "node dist/index.js",
    "build": "tsc",
    "gen-db-types": "supabase gen types typescript --project-id jeyzgwyiukeytlpzmitk > ./src/db/database.types.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jorge Martin",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.43.4",
    "axios": "^1.7.2",
    "express": "^4.19.2",
    "node-telegram-bot-api": "^0.66.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/node-telegram-bot-api": "^0.64.6",
    "tsx": "^4.14.0",
    "typescript": "^5.4.5"
  }
}
